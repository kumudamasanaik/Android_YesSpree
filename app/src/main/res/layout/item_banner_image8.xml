<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_banner_image8"
    android:layout_width="match_parent"
    android:elevation="@dimen/dimens_2"
    android:layout_height="@dimen/dimens_160">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_prod"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dummy_product" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_10"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/app_text_black"
        android:textSize="@dimen/dimens_15sp"
        android:visibility="visible"
        tools:text="@string/Name" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_order_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/dimens_10"
        android:background="@drawable/round_corner_rect_yelo_filled"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="@string/order_now"
        android:textColor="@color/app_text_black"
        android:textSize="@dimen/dimens_15sp"
        android:visibility="gone" />
</android.support.v7.widget.CardView>