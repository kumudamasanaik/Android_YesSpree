<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimens_102"
    android:layout_height="@dimen/dimens_100"
    android:background="@color/app_text_white"
    card_view:cardBackgroundColor="@color/app_text_white"
    card_view:cardCornerRadius="@dimen/dimens_4"
    card_view:cardElevation="@dimen/dimens_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_prod"
            android:layout_width="@dimen/dimens_105"
            android:layout_height="@dimen/dimens_75"
            android:background="@drawable/bg_shadow"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/dummy_product"
            tools:src="@drawable/dummy_product" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimens_2"
            android:paddingLeft="@dimen/dimens_1"
            android:paddingRight="@dimen/dimens_2"
            android:textColor="@color/main_cat"
            android:textSize="@dimen/dimens_9sp"
            tools:text="@string/name" />

        <View
            android:id="@+id/view_selected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_5"
            android:layout_marginBottom="@dimen/dimens_1"
            android:background="@color/yellow"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>