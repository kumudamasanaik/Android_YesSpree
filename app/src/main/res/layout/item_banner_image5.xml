<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_100"
    card_view:cardBackgroundColor="@color/app_text_white"
    card_view:cardCornerRadius="@dimen/dimens_10"
    android:layout_margin="@dimen/dimens_5"
    card_view:cardElevation="0dp">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_prod"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dummy_product" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_margin="@dimen/dimens_10"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="blank"
        android:textColor="@color/app_text_white"
        android:visibility="gone"
        tools:textSize="@dimen/dimens_15sp" />

</android.support.v7.widget.CardView>