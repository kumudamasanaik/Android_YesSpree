<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_12">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimens_14"
            android:layout_height="@dimen/dimens_14"
            app:srcCompat="@drawable/ic_slider_map_pin" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/menu_drawer_text"
            android:layout_marginLeft="@dimen/dimens_8"
            android:layout_toRightOf="@+id/iv_icon"
            android:fontFamily="@font/open_sans_semi_bold"
            tools:text="@string/name" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_edit"
            style="@style/menu_drawer_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/open_sans_light"
            android:visibility="gone"
            tools:text="@string/name" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/dimens_14"
            android:layout_height="@dimen/dimens_14"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_slider_edit_address" />
    </RelativeLayout>

    <View
        android:id="@+id/view_div"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/dimens_5"
        android:background="@color/app_text_div" />
</LinearLayout>