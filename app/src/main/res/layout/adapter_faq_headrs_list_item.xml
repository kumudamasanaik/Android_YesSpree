<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/view_questionHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:layout_margin="@dimen/dimens_5"
        android:elevation="@dimen/dimens_2"
        app:cardBackgroundColor="@color/cardview_light_background">

        <TextView
            android:id="@+id/tv_quetion_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_marginStart="@dimen/dimens_10"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dimens_4sp"
            android:padding="@dimen/dimens_5"
            android:text="@string/street_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_12sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_expand_more"
            android:layout_width="@dimen/dimens_20"
            android:layout_height="@dimen/dimens_20"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/dimens_10"
            app:srcCompat="@drawable/ic_expand_more_down"

            />


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_sub_questionview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_10"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>


</LinearLayout>