<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_140"
    android:layout_height="@dimen/dimens_140"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:layout_margin="@dimen/dimens_3">
    <FrameLayout
        android:layout_width="@dimen/dimens_140"
        android:layout_height="@dimen/dimens_140"


        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_prod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/dummy_product"
            tools:src="@drawable/dummy_product" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left|bottom">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dimens_5"
        android:fontFamily="@font/open_sans_semi_bold"
        android:gravity="center"
        android:layout_gravity="left|bottom"
        android:singleLine="true"
        android:textColor="@color/yellow"
        android:textSize="@dimen/dimens_15sp"
        tools:text="@string/name" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_prod_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_marginBottom="@dimen/dimens_5"
        android:fontFamily="@font/open_sans_regular"
        android:gravity="center"
        android:layout_gravity="left|bottom"
        android:singleLine="true"
        android:textColor="@color/app_text_white"
        android:textSize="@dimen/dimens_10sp"
        tools:text="@string/name" />

    </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>