<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="@dimen/dimens_5"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/dimens_5"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_10">


            <TextView
                android:id="@+id/tv_header_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingExtra="@dimen/dimens_5sp"
                android:padding="@dimen/dimens_5"
                android:text="@string/subscribe_and_save_more"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimens_11sp" />


            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header_quantity"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingExtra="@dimen/dimens_5sp"
                android:padding="@dimen/dimens_5"
                android:text="onion - 1Kg"
                android:textColor="@color/person_prefix"
                android:textSize="@dimen/dimens_12sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_subscription_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"

                >

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>