<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_height="@dimen/dimens_50">

    <TextView
        android:id="@+id/txt_item_list_title"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:padding="@dimen/dimens_10"
        android:layout_marginLeft="@dimen/dimens_5"
        tools:text="Price"
        android:textSize="@dimen/dimens_12sp"
        android:lineSpacingExtra="@dimen/dimens_4sp"
        android:fontFamily="@font/open_sans_regular"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        />

    <View
        android:id="@+id/view_select"
        android:layout_width="@dimen/dimens_3"
        android:layout_gravity="right|center"
        android:visibility="visible"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="@dimen/dimens_10"
        android:layout_height="@dimen/dimens_8"/>


</FrameLayout>