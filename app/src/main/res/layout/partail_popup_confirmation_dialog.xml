<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimens_2"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/dimens_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:fontFamily="@font/open_sans_semi_bold"
            android:padding="@dimen/dimens_5"
            android:text="@string/dialog_header"
            android:textSize="@dimen/dimens_13sp" />

        <TextView
            android:id="@+id/dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:fontFamily="@font/open_sans_regular"
            android:padding="@dimen/dimens_5"
            android:text="@string/dialog_body"
            android:textSize="@dimen/dimens_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0.5"
            android:visibility="gone"
            android:background="@color/person_prefix" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginBottom="@dimen/dimens_5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_gry_colour"
                android:padding="@dimen/dimens_5"
                android:text="Cancel"
                android:textColor="@color/md_teal_400" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_gry_colour"
                android:padding="@dimen/dimens_5"
                android:text="OK"
                android:textColor="@color/md_teal_400" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>