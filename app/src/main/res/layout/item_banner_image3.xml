<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimens_93"
    android:layout_height="@dimen/dimens_95"
    android:background="@color/app_text_white"
    card_view:cardBackgroundColor="@color/app_text_white"
    card_view:cardCornerRadius="@dimen/dimens_4"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_prod"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_70"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/dummy_product"
            tools:src="@drawable/dummy_product" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/main_cat"
            android:textSize="@dimen/dimens_9sp"
            tools:text="@string/name" />
    </LinearLayout>

</android.support.v7.widget.CardView>