<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_prodcut"
        android:layout_width="@dimen/dimens_80"
        android:layout_height="@dimen/dimens_80"
        android:layout_below="@+id/tv_active_subscription"
        android:layout_marginBottom="@dimen/dimens_5"
        android:layout_marginLeft="@dimen/dimens_10"
        android:layout_marginRight="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@drawable/bg_white_drwble"
        android:padding="@dimen/dimens_1"
        app:srcCompat="@drawable/dummy_product" />

    <LinearLayout
        android:id="@+id/product_detail_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_active_subscription"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_marginTop="@dimen/dimens_14"
        android:layout_toRightOf="@+id/iv_prodcut"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="left|center"
            android:padding="@dimen/dimens_2"
            tools:text="Onion"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimens_12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:padding="@dimen/dimens_2">

            <TextView
                android:id="@+id/tv_subscription_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_regular"
                android:lineSpacingExtra="@dimen/dimens_1sp"
                android:text="Subscribed for monthly @"
                android:textColor="@color/colore666666"
                android:textSize="@dimen/dimens_12sp" />


            <TextView
                android:id="@+id/tv_subscription_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_subscription_txtview"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_semi_bold"
                android:lineSpacingExtra="1sp"
                android:lines="1"
                android:paddingLeft="@dimen/dimens_2"
                tools:text="₹4865"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimens_15sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_saved_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingExtra="@dimen/dimens_4sp"
            android:padding="@dimen/dimens_2"
            tools:text="You Saved ₹54 "
            android:textColor="@color/color0d9f67"
            android:textSize="@dimen/dimens_12sp" />


        <TextView
            android:id="@+id/tv_cancel_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_regular"
            android:lineSpacingExtra="@dimen/dimens_4sp"
            android:padding="@dimen/dimens_2"
            android:paddingRight="@dimen/dimens_20"
            android:text="@string/cancel_plan"
            android:textColor="@color/colordc0000"
            android:textSize="@dimen/dimens_12sp" />


    </LinearLayout>
</RelativeLayout>