<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimens_2"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/dimens_10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:layout_marginBottom="@dimen/dimens_10"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_header_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:padding="@dimen/dimens_5"
            android:text="@string/select_quantity"
            android:textColor="@color/person_prefix"
            android:textSize="@dimen/dimens_11sp" />


        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_quantity"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_semi_bold"
            android:lineSpacingExtra="@dimen/dimens_5sp"
            android:padding="@dimen/dimens_5"
            android:text="@string/product_item_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimens_11sp" />

        <LinearLayout
            android:id="@+id/dynamic_layout"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>