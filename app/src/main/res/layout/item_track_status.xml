<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_status"
        android:layout_width="@dimen/dimens_12"
        android:layout_height="@dimen/dimens_12"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_track_status" />

    <TextView
        android:id="@+id/tv_satus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_12"
        android:layout_marginTop="@dimen/minus_dimens_1"
        android:layout_toEndOf="@+id/ic_status"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/person_prefix"
        android:textSize="@dimen/dimens_12sp"
        tools:text="TextView" />

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/dimens_4"
        android:layout_height="@dimen/dimens_50"
        android:layout_below="@+id/ic_status"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_4"
        android:background="@color/colore666666" />
</RelativeLayout>