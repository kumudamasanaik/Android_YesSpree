<com.yesspree.app.customviews.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multistateview"
    style="@style/MultiStateViewStyle"
    android:background="@color/app_text_white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout_emptyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_120"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimens_5"
        android:background="@drawable/bg_shadow"
        android:padding="@dimen/dimens_10"
        android:visibility="gone"
        >


    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/dummy_product"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_place_holder_msg"
            android:padding="@dimen/dimens_10"
            android:gravity="center"

            />
    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subcatagory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimens_5"
        android:layout_marginTop="@dimen/dimens_5"
        tools:listitem="@layout/item_main_category" />


</com.yesspree.app.customviews.MultiStateView>
