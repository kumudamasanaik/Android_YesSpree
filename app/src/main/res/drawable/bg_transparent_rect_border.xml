<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="@dimen/dimens_10"></corners>
            <stroke android:width="@dimen/dimens_1" android:color="@color/yellow"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="@dimen/dimens_2"></corners>
            <stroke android:width="@dimen/dimens_1" android:color="@color/yellow"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="@dimen/dimens_2"></corners>
            <stroke android:width="@dimen/dimens_1" android:color="@color/yellow"></stroke>
        </shape>
    </item>

</selector>